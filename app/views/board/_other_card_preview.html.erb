<li class="mt-3">
  <a href="#" class="block p-5 bg-white shadow-lg rounded-md transform hover:scale-110">
    <div class="flex justify-between mb-2">
      <p class="text-sm font-medium leading-snug text-gray-900 mr-0.5">
      <%= title %>
      </p>
      <span class="flex-shrink-0">
        <img class="w-6 h-6 rounded-full"
             src=<%= img_url %>
             alt=""
        />
      </span>
    </div>
    <div class="flex items-baseline justify-between">
      <time datetime=<%= date.strftime("%Y-%m-%d") %> class="text-sm text-wood-700"><%= date.strftime("%b %d") %></time>
        <span class="inline-flex items-center px-2 py-1 leading-tight bg-<%= tag_color %>-100 rounded">
          <span class="text-sm font-medium text-<%= tag_color %>-700"><%= tag_text %></span>
        </span>
    </div>
  </a>
</li>

