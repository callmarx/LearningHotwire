<li class="mt-3">
  <a href="#" class="block p-5 bg-white shadow rounded-md">
    <div class="flex justify-between mb-1">
      <p class="text-sm font-medium leading-snug text-gray-900 mr-0.5">
      <%= title %>
      </p>
      <span class="flex-shrink-0">
        <img class="w-6 h-6 rounded-full"
             src=<%= img_url %>
             alt=""
        />
      </span>
    </div>
    <div class="flex items-baseline justify-between">
      <time datetime=<%= date.strftime("%Y-%m-%d") %> class="text-sm text-gray-600"><%= date.strftime("%b %d") %></time>
      <div>
        <span class="inline-flex items-center px-2 py-1 leading-tight bg-<%= tag_color %>-100 rounded">
          <svg class="w-2 h-2 text-<%= tag_color %>-500" viewBox="0 0 8 8" fill="currentColor">
            <circle cx="4" cy="4" r="3" />
          </svg>
          <span class="ml-2 text-sm font-medium text-<%= tag_color %>-700"><%= tag_text %></span>
        </span>
      </div>
    </div>
  </a>
</li>

